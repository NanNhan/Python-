arr=[]
r=""
m=input("请输入")
for string in m:
    arr.append(string)
last=arr[-1]
arr.insert(0,last)
arr.pop()
for str in arr:
    r=r+str
print(r)


x = [[1, 2, 3, 1], [4, 5, 6, 4], [7, 8, 9, 7], [1, 2, 3, 4]]
num1 = 0
num2 = 0
num = num1 + num2
for i in range(4):
    for j in range(4):
        a = x[i]
        b = a[j]
        if i == j:
            num1 += b
for i in range(0,4):
    for j in range(0,4):
        c = x[i]
        d = c[j]
        if i+j == 3:
            num2 += d
            num = num1 + num2
print(num)


