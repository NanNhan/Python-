animal = ['elephant', 'monkey', 'snake', 'tiger']
x = input('请输入要查找的动物:')
while x in animal:
    a = animal.index(x)
    print('元素{0}在列表中的索引是:{1}'.format(x,a))
    break
while x not in animal:
    print('列表中不存在该元素')
    break
    
    
    
    print("y可以使用+-*/      n可以使用%&|        z可以使用！")
x = input("do you will use +-*/(y/n/z)")
while x == 'y':
    operator_list = ['+', '-', '*', '/']
    number_1 = float(input("请输入第一个操作数:"))
    operator = input("请输入运算符:")
    number_2 = float(input("请输入第二个操作数:"))

    while operator in operator_list:
        if operator == '+':
            result = number_1 + number_2
        elif operator == '_':
            result = number_1 - number_2
        elif operator == '*':
            result = number_1 * number_2
        elif operator == '/':
            result = number_1 / number_2
        print(number_1, operator, number_2, "=", result)
        break
while x == 'y':
    operator_list1 = ['%', '&', '|']
    number_3 = int(input("请输入第一个操作数:"))
    operator = input("请输入运算符:")
    number_4 = int(input("请输入第一个操作数:"))
    while operator in operator_list1:
        if operator == '%' and type(number_1) == int and type(number_2) == int:
            results = number_3 % number_4
        elif operator == '&' and type(number_1) == int and type(number_2) == int:
            results = number_3 & number_4
        elif operator == '|' and type(number_1) == int and type(number_2) == int:
            results = number_3 | number_4
        break
while x == 'z':
    number_5 = int(input("请输入一个操作数:"))
    if number_5 == 0:
        print("False")
    else:
        print("Ture")
        
        
        
